{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build", "gen"],
      "outputs": ["dist/**"]
    },
    "dev": {
      "dependsOn": ["gen", "validate-env"],
      "cache": false
    },
    "gen": {
      "dependsOn": ["gen:client"]
    },
    "gen:client": {
      "dependsOn": ["gen:server"],
      "outputs": ["src/__generated__/**"]
    },
    "gen:server": {
      "dependsOn": ["gen:service"],
      "outputs": ["__generated__/**", "graphql/__generated__/**"]
    },
    "gen:service": {
      "outputs": ["__generated__/**"]
    },
    "validate-env": {
      "cache": false
    }
  }
}
