{
  "name": "server",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "tsc",
    "gen:proto-ts": "sh ../../services/items-service/proto/generate-ts.sh",
    "gen:graphql-resolvers-ts": "graphql-codegen --config codegen.yml",
    "gen": "npm-run-all --parallel gen:proto-ts gen:graphql-resolvers-ts",
    "dev": "ts-node-dev --respawn --transpile-only --exit-child ./src/index.ts"
  },
  "dependencies": {
    "@apollo/server": "^4.1.1",
    "@graphql-tools/graphql-file-loader": "^7.5.11",
    "@graphql-tools/load": "^7.8.6",
    "@grpc/grpc-js": "^1.7.3",
    "graphql": "^16.6.0",
    "nexus": "^1.3.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.13.12",
    "@graphql-codegen/typescript": "^2.8.2",
    "@graphql-codegen/typescript-resolvers": "^2.7.7",
    "@types/node": "^18.11.9",
    "npm-run-all": "^4.1.5",
    "ts-node-dev": "^2.0.0",
    "ts-proto": "^1.135.0",
    "tsconfig": "*",
    "typescript": "^4.9.3"
  }
}
